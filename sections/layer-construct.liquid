<section class="layer-construct">

  <!-- DESKTOP LAYOUT -->
  <div class="layer-wrapper desktop-only">

    <!-- LEFT COLUMN (400x800) -->
    <div class="layer-card main-card">
      <div
        class="layer-bg"
        style="background-image:url('{{ section.settings.left_image_desktop | image_url }}')">
      </div>

      <div class="layer-content">
        <h3>{{ section.settings.left_heading }}</h3>
        <div class="layer-text">
          {{ section.settings.left_text }}
        </div>
      </div>
    </div>

    <!-- RIGHT COLUMN -->
    <div class="layer-right">

      <!-- TOP FEATURE (800x400) -->
      {% if section.blocks.size > 0 %}
        {% assign first = section.blocks.first %}
        <div class="layer-card feature-wide">
          <div
            class="layer-bg"
            style="background-image:url('{{ first.settings.image_desktop | image_url }}')">
          </div>
          <div class="layer-overlay dark-text">
            <h4>{{ first.settings.heading }}</h4>
            <p>{{ first.settings.text }}</p>
          </div>
        </div>
      {% endif %}

      <!-- BOTTOM FEATURES (395x380) -->
      <div class="feature-grid">
        {% for block in section.blocks offset:1 limit:2 %}
          <div class="layer-card feature-square">
            <div
              class="layer-bg"
              style="background-image:url('{{ block.settings.image_desktop | image_url }}')">
            </div>
            <div class="layer-overlay">
              <h4>{{ block.settings.heading }}</h4>
              <p>{{ block.settings.text }}</p>
            </div>
          </div>
        {% endfor %}
      </div>

    </div>
  </div>

  <!-- MOBILE SLIDER -->
  <div class="layer-mobile-slider mobile-only">
    <div class="layer-slider-track" id="layerSlider">

      <!-- SLIDE 1 — LEFT CARD -->
      <div class="layer-slide">
        <div
          class="layer-bg"
          style="background-image:url('{{ section.settings.left_image_mobile | image_url }}')">
        </div>

        <div class="layer-content">
          <h3>{{ section.settings.left_heading }}</h3>
          <div class="layer-text">
            {{ section.settings.left_text }}
          </div>
        </div>
      </div>

      <!-- SLIDES 2+ — FEATURES -->
      {% for block in section.blocks %}
        <div class="layer-slide">
          <div
            class="layer-bg"
            style="background-image:url('{{ block.settings.image_mobile | image_url }}')">
          </div>

          <div class="layer-overlay">
            <h4>{{ block.settings.heading }}</h4>
            <p>{{ block.settings.text }}</p>
          </div>
        </div>
      {% endfor %}

    </div>

    <!-- DOTS -->
    <div class="layer-slider-dots" id="layerDots">
      {% assign total_slides = section.blocks.size | plus: 1 %}
      {% for i in (1..total_slides) %}
        <span class="dot {% if forloop.first %}active{% endif %}"></span>
      {% endfor %}
    </div>
  </div>

</section>

<style>
.layer-construct {
  padding: 80px 20px;
}

/* VISIBILITY */
.desktop-only { display: block; }
.mobile-only { display: none; }

/* DESKTOP GRID */
.layer-wrapper {
  max-width: 1200px;
  margin: auto;
  display: grid;
  grid-template-columns: 400px 1fr;
  gap: 24px;
}

.layer-card {
  position: relative;
  border-radius: 28px;
  overflow: hidden;
}

.layer-bg {
  position: absolute;
  inset: 0;
  background-size: cover;
  background-position: center;
}

/* LEFT CARD */
.main-card {
  aspect-ratio: 1 / 2;
  display: flex;
  flex-direction: column;
  padding: 32px;
}

.layer-content {
  margin-top: auto;
  position: relative;
  z-index: 2;
}

.layer-content h3 {
  font-size: 26px;
  margin-bottom: 12px;
}

.layer-text {
  font-size: 16px !important;
  line-height: 1;
}

/* RIGHT SIDE */
.layer-right {
  display: grid;
  grid-template-rows: auto 1fr;
  gap: 24px;
}

.feature-wide { aspect-ratio: 2 / 1; }

.feature-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24px;
}

.feature-square { aspect-ratio: 1 / 1; }

/* OVERLAY */
.layer-overlay {
  position: relative;
  z-index: 2;
  height: 100%;
  padding: 28px;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  /* background: linear-gradient(to top, rgba(0,0,0,.65), transparent); */
  color: #fff;
}

.layer-overlay.dark-text {
  background: none;
  color: #000 !important;
  padding: 28px 70px;
  
}

/* MOBILE SLIDER */
@media (max-width: 900px) {
  .desktop-only { display: none; }
  .mobile-only { display: block; }

  .layer-mobile-slider {
    max-width: 380px;
    margin: auto;
  }

  .layer-construct {
  padding: 40px 20px;
}

  .layer-slider-track {
    display: flex;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    gap: 20px;
  }

  .layer-slide {
    flex: 0 0 100%;
    scroll-snap-align: center;
    position: relative;
    border-radius: 0px;
    overflow: hidden;
            min-height: calc(100vw + 130px);
  }

  .layer-slide .layer-bg {
    background-size: contain;
    background-repeat: no-repeat;
    background-position: top center;
  }

  .layer-slide::after {
    content: '';
    position: absolute;
    inset: 0;
    /* background: linear-gradient(to top, rgba(0,0,0,.65), transparent 55%); */
    z-index: 1;
  }

  .layer-slider-dots {
    display: flex;
    justify-content: center;
    gap: 8px;
    margin-top: 16px;
  }

  .dot {
    width: 8px;
    height: 8px;
    background: #fff;
    border-radius: 50%;
    cursor: pointer;
  }

  .dot.active {
    background: #61150F;
  }
}

@media (max-width: 900px) {

  /* Make each slide a column */
  .layer-slide {
    display: flex;
    flex-direction: column;
  }

  /* Push text to bottom for FIRST SLIDE (left image) */
  .layer-slide .layer-content {
    margin-top: auto;
  }
}

@media (max-width: 900px) {

  .layer-content {
  padding: 10px 20px;
}

  /* ONLY first slide (left image) */
  .layer-slider-track .layer-slide:first-child {
    padding-bottom: 20px;
    padding-right: 20px;
    padding-left: 20px;
  }
  .layer-content h3,h4 {
font-size: 20px !important;
}

  .layer-slider-track .layer-slide:first-child .layer-content {
    
    overflow: hidden;
  }
}

@media (max-width: 900px) {

  /* SECOND SLIDE TEXT COLOR */
  .layer-slider-track .layer-slide:nth-child(2) .layer-overlay h4,
  .layer-slider-track .layer-slide:nth-child(2) .layer-overlay p {
    color: #000;
  }

}




</style>

<script>
document.addEventListener('DOMContentLoaded', () => {
  const track = document.getElementById('layerSlider');
  const dots = document.querySelectorAll('#layerDots .dot');

  if (!track || !dots.length) return;

  track.addEventListener('scroll', () => {
    const slideWidth = track.offsetWidth;
    const index = Math.round(track.scrollLeft / slideWidth);

    dots.forEach((dot, i) => {
      dot.classList.toggle('active', i === index);
    });
  });

  dots.forEach((dot, i) => {
    dot.addEventListener('click', () => {
      track.scrollTo({
        left: track.offsetWidth * i,
        behavior: 'smooth'
      });
    });
  });
});
</script>

