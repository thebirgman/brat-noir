<section class="layer-construct">
  <div class="layer-wrapper">

    <!-- LEFT CARD -->
    <div class="layer-card main-card">
      <div class="layer-bg desktop"
        style="background-image:url('{{ section.settings.left_image_desktop | image_url }}')"></div>
      <div class="layer-bg mobile"
        style="background-image:url('{{ section.settings.left_image_mobile | image_url }}')"></div>

      <div class="layer-content">
        <h3>{{ section.settings.left_heading }}</h3>
        <p>{{ section.settings.left_text }}</p>
      </div>
    </div>

    <!-- RIGHT GRID (DESKTOP) -->
    <div class="layer-right desktop-only">
      {% for block in section.blocks %}
        <div class="layer-card image-card">
          <div class="layer-bg"
            style="background-image:url('{{ block.settings.image_desktop | image_url }}')"></div>

          <div class="layer-overlay">
            <h4>{{ block.settings.heading }}</h4>
            <p>{{ block.settings.text }}</p>
          </div>
        </div>
      {% endfor %}
    </div>

    <!-- MOBILE CAROUSEL -->
    <div class="layer-carousel mobile-only">
      <div class="carousel-track">
        {% for block in section.blocks %}
          <div class="carousel-slide">
            <div class="layer-bg"
              style="background-image:url('{{ block.settings.image_mobile | image_url }}')"></div>
            <div class="layer-overlay">
              <h4>{{ block.settings.heading }}</h4>
              <p>{{ block.settings.text }}</p>
            </div>
          </div>
        {% endfor %}
      </div>

      <div class="carousel-dots">
        {% for block in section.blocks %}
          <span class="dot {% if forloop.first %}active{% endif %}"></span>
        {% endfor %}
      </div>
    </div>

  </div>
</section>

<style>
.artisan-section {
  padding: 80px 20px;
  background: linear-gradient(#f3e9f6, #eef2f7);
}

.artisan-grid {
  max-width: 1300px;
  margin: 0 auto;
  display: grid;
  grid-template-columns: 1.15fr 1fr 1fr;
  grid-template-rows: auto auto;
  gap: 24px;
}

.artisan-card {
  position: relative;
  border-radius: 28px;
  overflow: hidden;
  background-size: cover;
  background-position: center;
  min-height: 300px;
  display: flex;
  align-items: flex-end;
}

.artisan-card.large {
  grid-row: span 2;
  align-items: flex-start;
  padding: 40px;
}

.artisan-overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(
    to bottom,
    rgba(0,0,0,0) 0%,
    rgba(0,0,0,0.55) 100%
  );
}

.artisan-card.large .artisan-overlay {
  background: none;
}

.artisan-content {
  position: relative;
  z-index: 2;
  color: #fff;
  padding: 24px;
}

.artisan-card.large .artisan-content {
  color: #1a1a1a;
  padding: 0;
}

.artisan-content h3 {
  font-size: 26px;
  margin-bottom: 12px;
}

.artisan-content p {
  font-size: 16px;
  line-height: 1.5;
}

/* MOBILE CAROUSEL */
@media (max-width: 900px) {
  .artisan-grid {
    display: none;
  }

  .artisan-carousel {
    max-width: 380px;
    margin: 0 auto;
    overflow: hidden;
  }

  .artisan-track {
    display: flex;
    transition: transform 0.4s ease;
  }

  .artisan-slide {
    min-width: 100%;
    padding: 0 12px;
  }

  .artisan-card {
    min-height: 420px;
  }

  .artisan-dots {
    display: flex;
    justify-content: center;
    gap: 8px;
    margin-top: 16px;
  }

  .artisan-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #d9cfd8;
    cursor: pointer;
  }

  .artisan-dot.active {
    background: #7b2c3b;
  }
}
</style>

<section class="artisan-section">
  <!-- DESKTOP -->
  <div class="artisan-grid">
    {% for block in section.blocks %}
      <div
        class="artisan-card {% if forloop.first %}large{% endif %}"
        style="background-image:url('{{ block.settings.desktop_image | image_url }}')"
      >
        <div class="artisan-overlay"></div>
        <div class="artisan-content">
          <h3>{{ block.settings.heading }}</h3>
          <p>{{ block.settings.text }}</p>
        </div>
      </div>
    {% endfor %}
  </div>

  <!-- MOBILE -->
  <div class="artisan-carousel">
    <div class="artisan-track">
      {% for block in section.blocks %}
        <div class="artisan-slide">
          <div
            class="artisan-card"
            style="background-image:url('{{ block.settings.mobile_image | image_url }}')"
          >
            <div class="artisan-overlay"></div>
            <div class="artisan-content">
              <h3>{{ block.settings.heading }}</h3>
              <p>{{ block.settings.text }}</p>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>

    <div class="artisan-dots">
      {% for block in section.blocks %}
        <span class="artisan-dot {% if forloop.first %}active{% endif %}"></span>
      {% endfor %}
    </div>
  </div>
</section>

<script>
(function () {
  const track = document.querySelector('.artisan-track');
  const dots = document.querySelectorAll('.artisan-dot');
  let index = 0;

  dots.forEach((dot, i) => {
    dot.addEventListener('click', () => {
      index = i;
      track.style.transform = `translateX(-${index * 100}%)`;
      dots.forEach(d => d.classList.remove('active'));
      dot.classList.add('active');
    });
  });
})();
</script>

{% schema %}
{
  "name": "Artisan Feature Grid",
  "max_blocks": 4,
  "blocks": [
    {
      "type": "card",
      "name": "Feature Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "desktop_image",
          "label": "Desktop background image"
        },
        {
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Mobile background image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Artisan Design"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "No pixelated prints. Crisp lines and rich textures."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Artisan Feature Grid"
    }
  ]
}
{% endschema %}
