<section class="layer-construct">
  <div class="layer-wrapper">

    <!-- LEFT COLUMN (400x800) -->
    <div class="layer-card main-card">
      <div
        class="layer-bg"
        style="background-image:url('{{ section.settings.left_image_desktop | image_url }}')">
      </div>

      <div class="layer-content">
        <h3>{{ section.settings.left_heading }}</h3>
        <p>{{ section.settings.left_text }}</p>
      </div>
    </div>

    <!-- RIGHT COLUMN -->
    <div class="layer-right">

      <!-- TOP FEATURE (800x400) -->
      {% if section.blocks.size > 0 %}
        {% assign first = section.blocks.first %}
        <div class="layer-card feature-wide">
          <div
            class="layer-bg"
            style="background-image:url('{{ first.settings.image_desktop | image_url }}')">
          </div>
          <div class="layer-overlay">
            <h4>{{ first.settings.heading }}</h4>
            <p>{{ first.settings.text }}</p>
          </div>
        </div>
      {% endif %}

      <!-- BOTTOM FEATURES (395x380 each) -->
      <div class="feature-grid">
        {% for block in section.blocks offset:1 limit:2 %}
          <div class="layer-card feature-square">
            <div
              class="layer-bg"
              style="background-image:url('{{ block.settings.image_desktop | image_url }}')">
            </div>
            <div class="layer-overlay">
              <h4>{{ block.settings.heading }}</h4>
              <p>{{ block.settings.text }}</p>
            </div>
          </div>
        {% endfor %}
      </div>

    </div>
  </div>
</section>

<style>
/* SECTION BACKGROUND */
.layer-construct {
  background: linear-gradient(180deg, #f3eefe, #f6f7fb);
  padding: 80px 20px;
}

/* MAIN GRID */
.layer-wrapper {
  max-width: 1200px;
  margin: auto;
  display: grid;
  grid-template-columns: 400px 1fr;
  gap: 24px;
}

/* BASE CARD */
.layer-card {
  position: relative;
  border-radius: 28px;
  overflow: hidden;
}

/* IMAGE HANDLING */
.layer-bg {
  position: absolute;
  inset: 0;
  background-size: cover;
  background-position: center;
}

/* LEFT CARD (400x800) */
.main-card {
  aspect-ratio: 1 / 2;
  background: #e9e2d8;
}

.layer-content {
  position: relative;
  z-index: 2;
  padding: 32px;
  color: #111;
}

.layer-content h3 {
  font-size: 26px;
  margin-bottom: 12px;
}

.layer-content p {
  font-size: 15px;
  line-height: 1.5;
}

/* RIGHT COLUMN */
.layer-right {
  display: grid;
  grid-template-rows: auto 1fr;
  gap: 24px;
}

/* TOP FEATURE (800x400) */
.feature-wide {
  aspect-ratio: 2 / 1;
}

/* BOTTOM FEATURES */
.feature-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24px;
}

.feature-square {
  aspect-ratio: 1 / 1;
}

/* OVERLAY */
.layer-overlay {
  position: relative;
  z-index: 2;
  height: 100%;
  padding: 28px;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  background: linear-gradient(to top, rgba(0,0,0,0.65), transparent);
  color: #fff;
}

.layer-overlay h4 {
  font-size: 20px;
  margin-bottom: 8px;
}

.layer-overlay p {
  font-size: 14px;
  line-height: 1.45;
}

/* MOBILE */
@media (max-width: 900px) {
  .layer-wrapper {
    grid-template-columns: 1fr;
  }

  .layer-right {
    grid-template-rows: none;
  }

  .feature-grid {
    grid-template-columns: 1fr;
  }

  .main-card,
  .feature-wide,
  .feature-square {
    aspect-ratio: auto;
    min-height: 420px;
  }
}
</style>

{% schema %}
{
  "name": "Layer Construct",
  "settings": [
    {
      "type": "image_picker",
      "id": "left_image_desktop",
      "label": "Left Image (Desktop)"
    },
    {
      "type": "text",
      "id": "left_heading",
      "label": "Left Heading",
      "default": "The 4-Layer Salon Construct"
    },
    {
      "type": "textarea",
      "id": "left_text",
      "label": "Left Text"
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Feature Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image_desktop",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Layer Construct Section",
      "blocks": [
        { "type": "card" },
        { "type": "card" },
        { "type": "card" }
      ]
    }
  ]
}
{% endschema %}
