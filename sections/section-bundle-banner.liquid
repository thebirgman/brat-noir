{{  'section-bundle-banner.css' | asset_url | stylesheet_tag }}
<section class="bundle-banner">
  <div class="bundle-banner__container">
    <div class="bundle-banner__content">
      <h2 class="bundle-banner__heading">{{ section.settings.heading }}</h2>
      <p class="bundle-banner__subheading">{{ section.settings.subheading }}</p>
    </div>
    <div class="bundle-banner__image">
      <img src="{{ section.settings.image | image_url }}" alt="{{ section.settings.heading }}" />
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Bundle banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ]
}
{% endschema %}
