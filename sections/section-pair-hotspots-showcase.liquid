		{
			"type": "range",
			"id": "padding_bottom",
			"min": 0,
			"max": 180,
			"step": 2,
			"unit": "px",
			"label": "Padding bottom",
			"default": 36
		}
	],
	"blocks": [
		{
			"type": "_pair-hotspots"
		},
		{
			"type": "_pair-showcase"
		}
	],
	"presets": [
		{
			"name": "Pair: Hotspots & Showcase",
