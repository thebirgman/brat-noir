						},
						{
							"type": "_pair-hotspots-hotspot",
							"settings": {
								"top": 55,
								"left": 55,
								"top_mobile": 55,
								"left_mobile": 55
							}
						},
						{
							"type": "_pair-hotspots-hotspot",
							"settings": {
								"top": 60,
