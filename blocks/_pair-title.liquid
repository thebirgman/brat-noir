{% capture blocks %}
  {% content_for "blocks" %}
{% endcapture %}

<div x-init="$ensemble.titleEl = $el" x-id="['ensemble-title']" :id="$id('ensemble-title')">
  {% render 'core-group', content: blocks, _settings: block.settings, flow: 'column', attributes: block.shopify_attributes %}
</div>

{% schema %}
{
	"name": "Title",
	"tag": null,
	"settings": [
		{
			"type": "select",
			"id": "alignment",
			"label": "Alignment",
			"default": "center",
			"options": [
				{
					"value": "start",
					"label": "⇤"
				},
				{
					"value": "center",
					"label": "|"
				},
				{
					"value": "end",
					"label": "⇥"
				}
			]
		},
		{
			"type": "select",
			"id": "gap",
			"label": "Gap",
			"default": "sm",
			"options": [
				{
					"value": "0",
					"label": "0"
				},
				{
					"value": "sm",
					"label": "S"
				},
				{
					"value": "md",
					"label": "M"
				},
				{
					"value": "lg",
					"label": "L"
				},
				{
					"value": "xl",
					"label": "XL"
				}
			]
		},
	],
	"blocks": [
		{
			"type": "theme-kicker"
		},
		{
			"type": "theme-heading"
		},
		{
			"type": "theme-text"
		},
		{
			"type": "theme-spacer"
		}
	],
	"presets": [
		{
			"name": "Title",
			"blocks": [
				{
					"type": "theme-kicker",
					"settings": {
						"kicker": "Title",
						"enable_line": true
					}
				}
			]
		}
	]
}
{% endschema %}
