<!-- /snippets/subscription-info-popup.liquid -->
<div class="modal micromodal-slide" id="subscription-info-popup" data-modal aria-hidden="true">
  <div class="modal__overlay" tabindex="-1" data-micromodal-close>
    <button data-micromodal-close class="modal__close" aria-label="Close"></button>
    <div class="modal__container subscription-info-modal" data-modal-content role="dialog" aria-modal="true" aria-label="Why Subscribe?">
      <h2 class="subscription-info-modal__title">Why Subscribe? Let's look at the Numbers.</h2>
      <div class="subscription-info-modal__table-wrapper">
        <table class="subscription-info-modal__table">
          <thead>
            <tr>
              <th>Feature</th>
              <th>Standard Purchase</th>
              <th>Subscribe & Save</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>Cost Per Set</td>
              <td>$18.00</td>
              <td>$15.00 <span class="subscription-info-modal__discount">(17% Off)</span></td>
            </tr>
            <tr>
              <td>Free Shipping Threshold</td>
              <td>Orders over $45</td>
              <td>Orders over $30</td>
            </tr>
            <tr>
              <td>Minimum Sets for Free Ship</td>
              <td>Must buy 3 Sets</td>
              <td>Must buy 2 Sets</td>
            </tr>
            <tr>
              <td>Commitment</td>
              <td>None</td>
              <td>Zero (Pause or Cancel anytime)</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

